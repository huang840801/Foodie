<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg"
    android:orientation="vertical">

    <!--<ImageView-->
    <!--android:layout_width="55dp"-->
    <!--android:layout_height="65dp"-->
    <!--android:layout_marginLeft="8dp"-->
    <!--android:src="@drawable/custom_marker"/>-->
    <TextView
        android:id="@+id/num_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text=""
        android:textColor="#ce8223"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_marker_star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:src="@drawable/star_unselected" />

        <ImageView
            android:id="@+id/imageView_marker_star2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:src="@drawable/star_unselected" />

        <ImageView
            android:id="@+id/imageView_marker_star3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:src="@drawable/star_unselected" />

        <ImageView
            android:id="@+id/imageView_marker_star4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:src="@drawable/star_unselected" />

        <ImageView
            android:id="@+id/imageView_marker_star5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:src="@drawable/star_unselected" />
    </LinearLayout>
</LinearLayout>