<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8f9">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--<ImageView-->
        <!--android:id="@+id/imageView_map_post"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_marginEnd="16dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:background="@drawable/location_white_bg"-->
        <!--android:padding="10dp"-->
        <!--android:src="@drawable/add"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/imageView_map_my_position" />-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_map_location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_map_my_position"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/my_position"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_map_location"
        app:layout_constraintEnd_toEndOf="@+id/imageView_map_location"
        app:layout_constraintStart_toStartOf="@+id/imageView_map_location"
        app:layout_constraintTop_toTopOf="@+id/imageView_map_location" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_map_post_article"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/circle_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_map_my_position" />

    <ImageView
        android:id="@+id/imageView_map_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/add_white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_map_post_article"
        app:layout_constraintEnd_toEndOf="@+id/imageView_map_post_article"
        app:layout_constraintStart_toStartOf="@+id/imageView_map_post_article"
        app:layout_constraintTop_toTopOf="@+id/imageView_map_post_article" />
</android.support.constraint.ConstraintLayout>