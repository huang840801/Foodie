<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_profile_article_photo"
        android:layout_width="330dp"
        android:layout_height="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/cooking" />

    <TextView
        android:id="@+id/textView_profile_article_restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:shadowColor="#161616"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        app:layout_constraintEnd_toEndOf="@+id/imageView_profile_article_photo"
        app:layout_constraintStart_toStartOf="@+id/imageView_profile_article_photo"
        app:layout_constraintTop_toTopOf="@+id/imageView_profile_article_photo" />

    <TextView
        android:id="@+id/textView_profile_article_content"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="今天真開心"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_profile_article_restaurantName" />
</android.support.constraint.ConstraintLayout>